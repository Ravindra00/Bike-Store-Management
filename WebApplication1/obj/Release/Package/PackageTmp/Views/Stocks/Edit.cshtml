
@*@model WebApplication1.ViewModel.StocksModel*@
@model ViewModels.StocksModel

<style>
    .error {
        color: red;
    }
</style>

@using (Html.BeginForm("Edit", "StoreAndStocks", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @*@Html.HiddenFor(x => x.StoreId)*@

            <label>Store Id</label>
            @Html.TextBoxFor(x => x.StoreId, new { @type = "number", @class = "form-control", @placeholder = "Enter Store Id", @readonly = "readonly" })
        </div>
        <div class="form-group">
            <label>Product Id</label>
            @Html.TextBoxFor(x => x.ProductId, new { @type = "number", @class = "form-control", @readonly = "readonly" })

        </div>
        <div class="form-group">
            <label>Quantity</label>
            @Html.TextBoxFor(x => x.Quantity, new { @type = "number", @class = "form-control", @placeholder = "Quantity" })
            @Html.ValidationMessageFor(x => x.Quantity, "", new { @class = "error" })
        </div>
        @*<div class="form-group">
            <label>Product Id</label>
            @Html.TextBox("pid", (object)ViewBag.pid, new { })
        </div>*@

        <div>
            <button type="submit" class="btn btn-success">Add</button>
        </div>
    </div>

    @*@Html.ValidationSummary(true, "Please fix the following error and then submit the form")*@

}

