    .tableFixHead {
        margin-top:50px;
        overflow: auto;
        height: 500px;
        width: fit-content;
    }

    .tableFixHead thead th {
        position: sticky;
        top: 0;
        z-index: 1;
    }

    .tableFixHead1 {
        margin-top:50px;
        overflow: auto;
        height: 200px;
        width: fit-content;
        top:200px;
    }

    .tableFixHead1 thead th {
        position: sticky;
        top: 0;
        z-index: 1;
    }
    .tableFixHead2 {
        margin-top: 10px;
        overflow: auto;
        height: 290px;
        width: fit-content;
        top: 200px;
    }
    tableFixHead2 thead th {
        position: sticky;
        top: 0;
        z-index: 1;
